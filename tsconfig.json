{
	"compilerOptions": {
		"rootDir": "Source",
		"sourceMap": true,
		"watch": true,
		"module": "ES2015",
		"moduleResolution": "node",
		"target": "ES2015",
		"jsx": "react",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true, // doesn't modify output, *or* own import code (it's just for type-checking)
		//"esModuleInterop": true, // doesn't modify output, only code for the stuff we import
		"useDefineForClassFields": true, // needed for mobx @observable
		"alwaysStrict": true,
		"outDir": "Dist",
		"declaration": true,
		"declarationDir": "Dist"

		// todo: uncomment these
		//"alwaysStrict": true,
		//"strictNullChecks": true
	},
	"include": [
		"Typings/**/*.d.ts",
		"Source/**/*.ts",
		"Source/**/*.tsx"
	],
	"compileOnSave": true
}